<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="insert" tabindex="-1" role="dialog" aria-labelledby="insert" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
      <div class="modal-content" id="scopeModal">
          <div class="modal-header">
              <h5 class="modal-title" id="insertTitle">postagem</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <div class="modal-body">
            <form action="/painel/new" method="POST" enctype="multipart/form-data">
              <% if (dados._id) { %>
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="_id" value="<%= dados._id %>">
              <% } %>
              <div class="form-group col-md-10 container">
                <input type="file" name="image"  id="img" value="<%= dados.img %>">
              </div>
              <div class="form-group col-md-10 container">
                <input type="text" name="title" class="form-control" id="title" placeholder="Titulo" value="<%= dados.title %>">
              </div>
              <div class="form-group col-md-10 container">
                <textarea placeholder="...Desce a letra..." name="message" class="form-control" pattern="[a-z\s]+$" rows="3" cols="40"><%= dados.message %></textarea>
              </div>  
              <div class="form-group col-md-10 container">
                <input type="submit" value="Publicar" class="btn btn-primary form-control mt-2"/>
              </div>
            </form>
          </div>  
      </div>
  </div>
</div>

